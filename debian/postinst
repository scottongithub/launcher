#!/bin/sh
# postinst script for flashpoint-infinity
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# Link to the binary
ln -sf '/usr/lib/flashpoint-infinity/flashpoint-launcher' '/usr/bin/flashpoint-infinity'

# SUID chrome-sandbox for Electron 5+
chmod 4755 '/usr/lib/flashpoint-infinity/chrome-sandbox' || true

update-mime-database /usr/share/mime || true
update-desktop-database /usr/share/applications || true

# preserves config.json and preferences.json in case this is an upgrade
# live-config.json if it exists was made in preinst
if [ -f /usr/lib/flashpoint-infinity/live-config.json ]; then
  mv -f /usr/lib/flashpoint-infinity/live-config.json /usr/lib/flashpoint-infinity/config.json
fi
if [ -f /usr/lib/flashpoint-infinity/live-preferences.json ]; then
  mv -f /usr/lib/flashpoint-infinity/live-preferences.json /usr/lib/flashpoint-infinity/preferences.json
fi

# These need to sit next to the launcher and be writable
chmod 666 /usr/lib/flashpoint-infinity/config.json
touch /usr/lib/flashpoint-infinity/preferences.json
chmod 666 /usr/lib/flashpoint-infinity/preferences.json

# TODO find out what in the packaging is re-writing
# permissions on these libraries so this isn't needed
chmod 755 /usr/lib/flashpoint-infinity/libEGL.so
chmod 755 /usr/lib/flashpoint-infinity/libffmpeg.so
chmod 755 /usr/lib/flashpoint-infinity/libGLESv2.so
chmod 755 /usr/lib/flashpoint-infinity/libvk_swiftshader.so

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
